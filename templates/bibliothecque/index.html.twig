{% extends 'base.html.twig' %}

{% block title %}Liste de bibliothèques{% endblock %}

{% block body %}
    <h1>Liste de bibliothèques</h1>
    <div>
        <a href="{{ path('bibliothecque_new') }}"
           class="btn btn-primary" id="btnAjout">
            Ajouter une nouvelle bibliothèque
        </a>
        <a href="{{ path('homepage') }}"
           class="btn btn-secondary" id="btnRetour">
            Retourner à la page d'accueil
        </a>
    </div>
    <table class="table tableAdmin">
        <thead>
            <tr>
                <th>NomBiblio</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for bibliothecque in bibliothecques %}
            <tr>
                <td>{{ bibliothecque.nomBiblio }}</td>
                <td>
                    <a href="{{ path('bibliothecque_edit',
                        {'id': bibliothecque.id}) }}" class="btn btn-primary">
                        <i class="far fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('bibliothecque_delete_view',
                        {'id': bibliothecque.id}) }}" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
